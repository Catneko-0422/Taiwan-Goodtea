@{
    ViewData["Title"] = "重設密碼";
    var token = Context.Request.Query["token"];
    var email = Context.Request.Query["email"];
}
@section Styles {
    <link rel="stylesheet" href="~/css/Home/resetpassword.css" />
}
@section Scripts {
    <script src="~/js/Home/forgotpassword.js"></script>
}

<div class="glass-container">
    <div class="reset-password-box">
        <h2>重設密碼</h2>
        <form asp-controller="Home" asp-action="ResetPassword" method="post">
            <input type="hidden" name="token" value="@token" />
            <input type="hidden" name="email" value="@email" />

            <input type="password" id="password" name="password" required placeholder="新密碼">
            <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="確認新密碼">

            <button type="submit">重設密碼</button>
        </form>
    </div>
</div>
