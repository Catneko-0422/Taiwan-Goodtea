@{
    ViewData["Title"] = "登入";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Home/login.css" />
}
@section Scripts {
    <script src="~/js/Home/login.js"></script>
}


<div class="glass-container">
    <div class="login-box">
        <h2>登入</h2>
        <form action="#" method="post">
			<input type="text" id="username" name="username" required placeholder="使用者名稱">

			<input type="password" id="password" name="password" required placeholder="密碼">

            <div class="options">
                <input type="checkbox" id="remember" name="remember">
                <label for="remember">記住我</label>
                <a href="#">忘記密碼?</a>
            </div>

			<button type="submit">登入</button>
            <p>還沒有帳號? <a id="register" asp-area="" asp-controller="Home" asp-action="Register">註冊</a></p>
        </form>
    </div>
</div>